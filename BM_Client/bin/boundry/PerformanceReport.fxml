<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PerformanceReportController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <Label text="Performance Report">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <TableView fx:id="performanceTable" prefHeight="200.0">
              <columns>
                <TableColumn fx:id="reportIdCol" prefWidth="75.0" text="Report ID" />
                <TableColumn fx:id="branchIdCol" prefWidth="75.0" text="Branch ID" />
                  <TableColumn fx:id="totalOrdersCol" prefWidth="100.0" text="Total Orders" />
                  <TableColumn fx:id="totalRevenueCol" prefWidth="100.0" text="Total Revenue" />
                  <TableColumn fx:id="avgExpectedDeliveryCol" prefWidth="180.0" text="Avg. Expected Delivery (m)" />
                  <TableColumn fx:id="avgActualDeliveryCol" prefWidth="180.0" text="Avg. Actual Delivery (m)" />
                  <TableColumn fx:id="onTimeDeliveryRateCol" prefWidth="150.0" text="On-Time Rate (%)" />
              </columns>
            </TableView>
            <VBox fx:id="chartVBox" alignment="CENTER" minHeight="300.0" VBox.vgrow="ALWAYS" />
            <Button fx:id="btnclose" mnemonicParsing="false" onAction="#handleCloseButton" text="Close" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>