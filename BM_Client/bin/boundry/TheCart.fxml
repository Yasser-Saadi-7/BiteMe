<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<!--
  TheCart.fxml — modern layout
  Controller: controllers.TheCartController

  Preserved fx:id:
    myCartTable, resNameCol, MTypeCol, dishNameCol, selCol, QCol, priceCol
  Preserved actions:
    #home, #remove, #pay
-->

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="controllers.TheCartController"
           prefWidth="1000.0" prefHeight="640.0"
           style="-fx-background-image: url('/images/LogIn.png');
                  -fx-background-size: cover;
                  -fx-background-position: center;">

  <!-- stylesheet path is relative to /boundry -->
  <stylesheets>
    <URL value="@../css/LogIn.css"/>
  </stylesheets>

  <children>
    <Pane StackPane.alignment="CENTER" styleClass="overlay-tint"/>

    <BorderPane maxWidth="1100">

      <top>
        <HBox spacing="8">
          <padding><Insets top="20" right="24" bottom="0" left="24"/></padding>
          <children>
            <Label text="BiteMe" style="-fx-text-fill: white;">
              <font><Font name="Segoe UI Semibold" size="20"/></font>
            </Label>
            <Label text="•  My Cart" style="-fx-text-fill: rgba(255,255,255,0.85);"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Home" onAction="#home"/>
          </children>
        </HBox>
      </top>

      <center>
        <StackPane BorderPane.alignment="CENTER">
          <children>

            <VBox styleClass="card" spacing="18" maxWidth="980" maxHeight="560">
              <padding><Insets top="22" right="22" bottom="22" left="22"/></padding>

              <VBox spacing="4">
                <Label text="My Cart" styleClass="heading-1"/>
                <Label text="Review the items in your cart, remove items, or proceed to payment."
                       styleClass="muted"/>
              </VBox>

              <!-- TableView & columns (fx:id EXACTLY as in controller) -->
              <TableView fx:id="myCartTable" prefHeight="420.0">
                <columns>
                  <TableColumn fx:id="resNameCol"   text="Restaurant Name" prefWidth="160.0"/>
                  <TableColumn fx:id="MTypeCol"     text="Meal Type"       prefWidth="120.0"/>
                  <TableColumn fx:id="dishNameCol"  text="Dish Name"       prefWidth="180.0"/>
                  <TableColumn fx:id="selCol"       text="Selections"      prefWidth="320.0"/>
                  <TableColumn fx:id="QCol"         text="Quantity"        prefWidth="100.0"/>
                  <TableColumn fx:id="priceCol"     text="Price"           prefWidth="100.0"/>
                </columns>
              </TableView>

              <!-- Actions (handlers names preserved) -->
              <HBox spacing="10" alignment="CENTER_RIGHT">
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="Remove" onAction="#remove"/>
                <Button text="Pay" onAction="#pay" styleClass="primary"/>
              </HBox>

            </VBox>

          </children>
        </StackPane>
      </center>

    </BorderPane>
  </children>
</StackPane>
