<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/8.0.171"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controllers.QualifiedWorkerPageController"
           prefWidth="960.0" prefHeight="600.0"
           stylesheets="@/css/LogIn.css"
           style="-fx-background-image: url('/images/LogIn.png'); -fx-background-size: cover; -fx-background-position: center;">

    <children>
        <Pane StackPane.alignment="CENTER" styleClass="overlay-tint"/>

        <StackPane StackPane.alignment="CENTER">
            <children>
                <VBox styleClass="card" spacing="20.0" maxWidth="480" alignment="CENTER">
                    <padding>
                        <Insets top="30" right="30" bottom="30" left="30"/>
                    </padding>

                    <Label text="BiteMe Worker Portal" styleClass="heading-1"/>
                    <Label text="Welcome back! Select an operation to continue your work."
                           styleClass="muted" wrapText="true" maxWidth="400"/>

                    <VBox spacing="15" alignment="CENTER" maxWidth="400">

                        <Button fx:id="editMenuBtn" onAction="#editMenu" text="Edit Menu" 
                                prefWidth="400" prefHeight="60" styleClass="primary-button" />
                        <Label text="Manage and update the available dishes and prices." styleClass="muted"/>

                        <Button fx:id="logOutBtn" onAction="#logOut" text="Log Out" 
                                prefWidth="400" prefHeight="60" styleClass="danger-button" />
                        <Label text="Securely exit the system and return to the login screen." styleClass="muted"/>
                    </VBox>
                </VBox>
            </children>
        </StackPane>
    </children>
</StackPane>