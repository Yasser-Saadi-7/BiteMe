<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<!--
  TakeAway.fxml — modern centered layout to match TheCart.fxml
  Controller: controllers.TakeAwayController

  Preserved fx:id:
    reqTimetxt, totalPricelbl, reqDate
  Preserved actions:
    #home, #back, #confirm
-->

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="controllers.TakeAwayController"
           prefWidth="1000.0" prefHeight="640.0"
           style="-fx-background-image: url('/images/LogIn.png');
                  -fx-background-size: cover;
                  -fx-background-position: center;">

  <!-- stylesheet path is relative to /boundry just like in TheCart.fxml -->
  <stylesheets>
    <URL value="@../css/LogIn.css"/>
  </stylesheets>

  <children>
    <!-- subtle overlay (class can exist in your LogIn.css) -->
    <Pane StackPane.alignment="CENTER" styleClass="overlay-tint"/>

    <BorderPane maxWidth="1100">

      <!-- Top bar -->
      <top>
        <HBox spacing="8">
          <padding><Insets top="20" right="24" bottom="0" left="24"/></padding>
          <children>
            <Label text="BiteMe" style="-fx-text-fill: white;">
              <font><Font name="Segoe UI Semibold" size="20"/></font>
            </Label>
            <Label text="•  Take Away" style="-fx-text-fill: rgba(255,255,255,0.85);"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Home" onAction="#home"/>
          </children>
        </HBox>
      </top>

      <!-- Centered card -->
      <center>
        <StackPane BorderPane.alignment="CENTER">
          <children>

            <VBox styleClass="card" spacing="18" maxWidth="720" maxHeight="520">
              <padding><Insets top="22" right="22" bottom="22" left="22"/></padding>

              <!-- Heading -->
              <VBox spacing="4">
                <Label text="Take Away" styleClass="heading-1"/>
                <Label text="Pick a date and time for pickup and confirm your order."
                       styleClass="muted"/>
              </VBox>

              <!-- Form -->
              <GridPane hgap="16" vgap="14">
                <columnConstraints>
                  <ColumnConstraints percentWidth="38"/>
                  <ColumnConstraints percentWidth="62"/>
                </columnConstraints>
                <rowConstraints>
                  <RowConstraints vgrow="NEVER"/>
                  <RowConstraints vgrow="NEVER"/>
                  <RowConstraints vgrow="NEVER"/>
                </rowConstraints>

                <!-- Requested Date -->
                <Label text="Requested Date:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <DatePicker fx:id="reqDate"
                            prefWidth="260.0"
                            GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Requested Time -->
                <Label text="Requested Time:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="reqTimetxt"
                           promptText="HH:mm"
                           prefWidth="260.0"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- Total Price -->
                <Label text="Total Price:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="totalPricelbl"
                       styleClass="heading-2"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>
              </GridPane>

              <!-- Actions -->
              <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Back" onAction="#back"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="Confirm" onAction="#confirm" styleClass="primary"/>
              </HBox>

            </VBox>

          </children>
        </StackPane>
      </center>

    </BorderPane>
  </children>
</StackPane>
