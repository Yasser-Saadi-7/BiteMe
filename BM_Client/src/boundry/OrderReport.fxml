<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.OrderReportController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <Label text="Order Report">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <TableView fx:id="orderTable" prefHeight="250.0">
              <columns>
                <TableColumn fx:id="reportIdColumn" prefWidth="75.0" text="Report ID" />
                <TableColumn fx:id="branchIdColumn" prefWidth="75.0" text="Branch ID" />
                  <TableColumn fx:id="restaurantNameColumn" prefWidth="120.0" text="Restaurant" />
                  <TableColumn fx:id="itemIdColumn" prefWidth="75.0" text="Item ID" />
                  <TableColumn fx:id="itemNameColumn" prefWidth="150.0" text="Item Name" />
                  <TableColumn fx:id="itemCategoryColumn" prefWidth="100.0" text="Category" />
                  <TableColumn fx:id="quantityColumn" prefWidth="75.0" text="Quantity" />
                  <TableColumn fx:id="itemPriceColumn" prefWidth="80.0" text="Price" />
                  <TableColumn fx:id="totalRevenueColumn" prefWidth="100.0" text="Total Revenue" />
              </columns>
            </TableView>
            <VBox fx:id="chartVBox" alignment="CENTER" minHeight="300.0" VBox.vgrow="ALWAYS" />
            <Button fx:id="btnClose" mnemonicParsing="false" onAction="#handleCloseButton" text="Close" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>